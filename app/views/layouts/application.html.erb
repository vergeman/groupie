<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets' %>

  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
</head>
<body>

<div class="container showgrid">
  <%= render 'layouts/header' %>

  <section>
    <% flash.each do |key, message| %>
    <%= content_tag(:div, message, :class => "flash #{key}") %>
    <% end %>

  <%= yield %>
  </section>

  <%= render 'layouts/footer' %>
</div>

</body>
</html>
