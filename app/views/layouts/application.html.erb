<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets' %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js", "application" %>

  <%= javascript_include_tag 'jquery_ujs' %>

  <%= javascript_include_tag 'jquery-ui-1.8.14.custom.min.js' %>


  <%= csrf_meta_tag %>
</head>
<body>

  <div class="container">

    <%= render 'layouts/header' %>
    <hr>

    <section>

      <div id="navbar" class="span-5">
	<%= render 'shared/nav_bar' %>
      </div>

      <div id="main" class="span-19 last">
	<% flash.each do |key, message| %>
	<%= content_tag(:div, message, :class => "flash #{key}") %>
	<% end %>
      
	<%= yield %>
      </div>

    </section>

    <hr>
    <%= render 'layouts/footer' %>



  </div>

</body>
</html>
