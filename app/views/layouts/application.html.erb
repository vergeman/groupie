<!DOCTYPE html>
<html>

  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>

    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js", "application" %>

    <%= javascript_include_tag 'jquery_ujs' %>

    <%= javascript_include_tag 'jquery-ui-1.8.14.custom.min.js' %>

    <%= javascript_include_tag 'jquery.countdown.pack.js' %>

    <%= csrf_meta_tag %>
  </head>

  <body>
    <!-- old fixed background
    <img src="/images/city4.jpg" class="bg">
    -->
    <div class="container">

      <%= render 'layouts/header' %>

      <section>

	<div id="content">


	  <div id="main">
	    <!--
	       <% flash.each do |key, message| %>
	       <%= content_tag(:div, message, :class => "flash #{key}") %>
	    <% end %>
	    -->

	    <div id="search_results">
	      <%= yield %>
	    </div>

	  </div>

	</div>


      </section>

      <hr>

      <!--footer-->
      <footer>
	<!--
	   <%= render 'layouts/footer' %>
	   -->
      </footer>


    </div>

  </body>

  <%= debug(params)  if Rails.env.development? %>

