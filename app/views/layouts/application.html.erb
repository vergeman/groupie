<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets' %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js", "application" %>

  <%= javascript_include_tag 'jquery_ujs' %>

  <%= csrf_meta_tag %>
</head>
<body>

  <div class="container">

    <%= render 'layouts/header' %>

    <section>

      <div id="navbar" class="span-4">
	<%= render 'shared/nav_bar' %>
      </div>

      <div id="main" class="span-19 last">
	<% flash.each do |key, message| %>
	<%= content_tag(:div, message, :class => "flash #{key}") %>
	<% end %>
      
	<%= yield %>
      </div>

    </section>

    <%= render 'layouts/footer' %>



  </div>

</body>
</html>
